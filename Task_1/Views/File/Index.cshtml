@model Task_1.Models.FileUploadViewModel
@{
    ViewData["Title"] = "File Upload";
}

<h1 class="text-center my-4">Upload File</h1>

<div class="container">
    @using (Html.BeginForm("Upload", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.UserID, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.UserID, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="file" class="control-label">Select File:</label>
                    <input type="file" name="file" id="file" class="form-control-file" />
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-4">Upload</button>
            </div>
        </div>
    }
</div>